@{
    ViewData["Title"] = "Access Denied";
}
<div class="access-denied-container">
    <div class="lock-icon">🔒</div>
    <h1>Access Restricted</h1>

    <div class="admin-message">
        <div class="coffee-bribe">☕ Coffee bribes accepted here</div>
    </div>
</div>

<style>
    .access-denied-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 2rem;
        text-align: center;
        font-family: 'Segoe UI', system-ui, sans-serif;
    }

    .lock-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.8;
    }

    h1 {
        font-weight: 600;
        margin-bottom: 0.25rem;
        color: #2d3748;
    }

    .subtext {
        color: #718096;
        font-size: 0.9rem;
        margin-bottom: 2rem;
    }

    .admin-message {
        background: #f8fafc;
        border-radius: 8px;
        padding: 1rem;
        margin-top: 1.5rem;
        border: 1px solid #e2e8f0;
    }

    .coffee-bribe {
        margin-top: 0.5rem;
        font-size: 0.85rem;
